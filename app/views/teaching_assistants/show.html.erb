<div class="container">
  <br>
  <h1 align="center"> Teaching Assistant Detail View</h1>
  <br><br>
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>Category</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>First Name</td><td><%= @ta.first_name %></td>
      </tr>
      <tr>
        <td>Last Name</td><td><%= @ta.last_name %></td>
      </tr>
      <tr>
        <td>E-mail</td><td><%= @ta.email %></td>
      </tr>
      <tr>
        <td>Course</td><td><%= Course.find(@ta.course_id).name %></td>
      </tr>
      <tr>
        <td>Lab Times</td>
        <td>
          <% for lab in @ta.lab_times.to_a do %>
            <a href=<%= lab_time_path(lab)%>> <%= lab.id %> </a>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Lab Assistants</td>
        <td>
          <% for la in @ta.lab_assistants.to_a do %>
            <a href=<%= lab_assistant_path(la)%>> <%= la.email %> </a>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>